<div class="card-body">

    <h3 class="card-title alert-success py-3 px-3 rounded-2"><a href="/Questions/Show/@Model.Id">@Model.Title</a></h3>

    <div class="card-text">@Model.Content</div>

    <div class="d-flex justify-content-between flex-row mt-5">

        <div><i class="bi bi-globe"></i> <a href="/Categories/Show/@Model.Category.Id">@Model.Category.Name</a></div>

        <div><i class="bi bi-person"></i>@Model.User.UserName</div>

        @if (Model.UserId == ViewBag.UserCurent)
        {
            <a class="btn btn-success" href="/Questions/Edit/@Model.Id">Editare intrebare</a>
        }
        else if (User.IsInRole("Admin"))
        {
            <a class="btn btn-success" href="/Questions/EditCat/@Model.Id">Editare categorie intrebare</a>
        }
        <span class="alert-success px-1 align-content-center">@Model.Date</span>

    </div>

</div>