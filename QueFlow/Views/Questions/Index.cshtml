

<h2 class="text-center">All questions</h2>

<br />

@if(ViewBag.Msg != null){

    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Msg</h2>
}


<div class="d-flex justify-content-center">
    <a class="btn btn-outline-success" href="/Questions/New">Ask a question</a>
    <br />

</div>

<br />
<p>Sort by:</p>
@if (ViewBag.Filter != "1")
{
    <a class="btn btn-outline-success" href="@ViewBag.PaginationFilterUrl=1">Date</a>
}
else{
    <a class="btn btn-outline-danger" href="@ViewBag.PaginationFilterUrl=2">Date</a>
}
@if (ViewBag.Filter != "3")
{
    <a class="btn btn-outline-success" href="@ViewBag.PaginationFilterUrl=3">Answers</a>
}
else{
    <a class="btn btn-outline-danger" href="@ViewBag.PaginationFilterUrl=4">Answers</a>
}
<br />
<br />
@foreach (var Model in ViewBag.Questions)
{
    <div class="card questions">

        <partial name="QuestionInfo" model="Model" />

    </div>

    <br />
    <br />
}
<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item"> <a class="page-link" href="@ViewBag.PaginationBaseUrl=@i">@(i)</a> </li>
            }

            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

