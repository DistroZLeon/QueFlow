<h2>@ViewBag.Title</h2>
<br />
<div class="row">
	@foreach (var user in ViewBag.UsersList)
	{
		<div class="col-4 mb-4">
			<div class="card" style="height:100%; width: 100%;">
				<div class="card-title d-flex justify-content-center"><img src="@user.ProfPic" alt="User avatar" style="max-width:100px;max-heigth:100px;" /><a asp-area="" asp-controller="Users" asp-action="Show" asp-route-id="@user.Id" style="font-weight:bolder;color:darkgreen;text-decoration:none;"> @user.Alias</a></div>
				<div class="card-body d-flex justify-content-between flex-column">
					<div class="card-text">
						@if(user.Desc!=null)
						{
							<p>Description: @user.Desc</p>
						}
						@if(user.Nume!=null)
						{
							<p><i class="bi bi-person"></i> Name: @user.Nume</p>
						}
						<p><i class="bi bi-envelope"></i> Email: @user.Email</p>
						<div class="d-flex flex-row justify-content-between p-3">

							<div>
								<a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-success">Edit user</a>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<br />
		<br />
	}
</div>